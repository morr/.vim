{
  "codeLens.enable": true,
  "solargraph.useBundler": false,
  "solargraph.diagnostics": true,
  "languageserver": {
    "rubocop": {
      "command": "bundle",
      "args" : ["exec", "rubocop", "--lsp"],
      "filetypes": ["ruby"],
      "rootPatterns": [".git", "Gemfile"],
      "requireRootPattern": true
    }
  }
}
